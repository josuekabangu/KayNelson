<!DOCTYPE html>
<html>
  <head>
    <title>KayNelson</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">KayAlbum</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active"><%= link_to "Home", root_path, class:"nav-link" %></li>
            <% @categoryNav.each do |category| %>
              <li><%= link_to category.name, category_path(category.id), class:"nav-link" %></li>
            <% end %>
          </ul>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Upload Photo", upload_path, class:"nav-link" %></li>
          <li><%= link_to "Add Category", new_category_path, class:"nav-link" %></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
